<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Insertar registro
	</summary>
	
	<log>false</log>
	
	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset>query.sql</recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>app_id</colname>	
			<colname>title</colname>	
			<colname>position</colname>		
		</cols>
		<table>s_menu</table>
		<oper>AÑADIR</oper>
		<area>Menú</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey params="insert.sql">select ${fld:insert.sql.lastid} as id</pkey>
	</audit>

	<colname>role_id</colname>
	<sql-template params="insert.sql">insert-roles.sql</sql-template>

	<transaction>
		<classname>domain.menu.MenuTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>

	<query>insert.sql</query>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>template.txt</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/html</content-type>
		<expiration>0</expiration>
		<print mode="form" recordset="_request" />
	</output>

</config>
