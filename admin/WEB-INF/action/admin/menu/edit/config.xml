<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Editar registro
	</summary>
	
	<log>false</log>

	<set-request-attribute id="help.msg" value="Ayuda en línea para la página EDITAR..." />

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="getrecord.sql" source="sql" scope="transaction" />
		<recordset id="roles.sql" source="sql" scope="transaction" />
		<recordset id="menuroles.sql" source="sql" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>template.txt</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/html</content-type>
		<expiration>0</expiration>
		<print mode="table" recordset="roles.sql" tag="role-list" />
		<print mode="checkbox" recordset="menuroles.sql" control="role_id" />
		<print mode="form" recordset="getrecord.sql" />
		<print mode="form" recordset="_request" />
	</output>

</config>
