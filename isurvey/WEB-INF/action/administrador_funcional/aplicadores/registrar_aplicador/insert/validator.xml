<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id="abc" >

     <parameter id="userlogin" type="varchar" required="true" label="Login" maxlen="25" regexp="\w{5,}?" regexp-error-label="Use solo letras y números, sin espacios (al menos 5 caracteres)." />
    <parameter id="passwd" type="varchar" required="true" label="Password" maxlen="15" regexp="\w{6,}?" regexp-error-label="Use solo letras y números, sin espacios (al menos 6 caracteres)." />
    <parameter id="confirm" type="varchar" required="true" label="Confirmar Contraseña" maxlen="15" />
    <parameter id="lname" type="varchar" required="true" label="Apellido" maxlen="25" />
    <parameter id="fname" type="varchar" required="true" label="Nombre" maxlen="25" />
  

    <parameter id="email" type="varchar" required="true" label="E-mail"
		maxlen="150" regexp="^([\w-]+\.)*?[\w-]+@[\w-]+\.([\w-]+\.)*?[\w]+$"
		regexp-error-label="Formato incorrecto, use xxxx@xxxxxx.xxx" />

   
	
    <custom-validator
	classname="dinamica.validators.DuplicatedKeyValidator" 
	on-error-label="Este Login ya está registrado en la base de datos, use otro Login."
	sql="nodup.sql" />

    <custom-validator
	classname="dinamica.validators.MatchEqualValidator" 
	on-error-label="La contraseña no es igual a su confirmación."
	value1="passwd" value2="confirm" />

    <custom-validator
	classname="dinamica.validators.ArrayNotEmptyValidator" 
	on-error-label="Por favor asigne al menos un rol de seguridad a este Usuario."
	parameter-name="role_id" />

    <custom-validator
	classname="dinamica.security.PasswordEncryptor" 
	on-error-label="Error generando el hash MD5."/>

</validator>
